// these are all the settings I have added to vscode that should be migrated to this theme.
{
    // how the editor should look
    "workbench.colorCustomizations": {
        "[Tomorrow Night Eighties Operator Mono]": {
            "activityBar.background": "#282e3d",
            "activityBar.border": "#000000",
            "editor.background": "#282e3d",
            "editorGroupHeader.tabsBackground": "#222935",
            "panel.border": "#000000",
            "panelSectionHeader.foreground": "#ffcc66",
            "panelTitle.activeBorder": "#ffcc66",
            "sideBar.background": "#222935",
            "sideBar.border": "#000000",
            // "statusBar.background": "#222935",
            "statusBar.border": "#000000",
            // "statusBarItem.remoteBackground": "#cc6566",
            // "statusBarItem.remoteForeground": "#99cc98",
            "tab.activeBorderTop": "#ffcc66",
            "tab.border": "#000000",
            "tab.inactiveBackground": "#222935",
            "terminal.tab.activeBorder": "#ffcc66",
            "titleBar.activeBackground": "#222935",
            "titleBar.border": "#000000"
        },
        "editorUnnecessaryCode.opacity": "#97979790",
        "statusBar.background": "#222935", // set precedence so we can override in workspace file
    },
    //
    // CODE: semantic tokens
    //
    "editor.semanticTokenColorCustomizations": {
        "[Tomorrow Night Eighties Operator Mono]": {
            "rules": {
                "*.readonly": "#cc6566",
                "*.typeHint": {
                    "fontStyle": "italic"
                },
                "enum": {
                    "fontStyle": "bold",
                    "foreground": "#ffcc66"
                },
                "enumMember": {
                    "foreground": "#cc6566"
                },
                "module": {
                    "fontStyle": "underline"
                },
                "variable.builtin": {
                    "foreground": "#cc6566"
                },
            }
        }
    },
    //
    // CODE: textmate rules
    //
    "editor.tokenColorCustomizations": {
        "[Tomorrow Night Eighties Operator Mono]": {
            // textmate is applied first, then overridden by semanticTokens
            "textMateRules": [
                // Python
                {
                    "name": "make vars, dots and commas white",
                    "scope": [
                        "variable.other.readwrite",
                        "meta.function-call"
                    ],
                    "settings": {
                        "foreground": "#c6c8c6" // cool white
                    }
                },
                {
                    "name": "make attributes and properties white",
                    "scope": [
                        "variable.other.property",
                        "meta.attribute.python"
                    ],
                    "settings": {
                        "foreground": "#c6c8c6"
                    }
                },
                {
                    "name": "make control flow (if, while, else, etc.) italic.",
                    "scope": [
                        "keyword.control"
                    ],
                    "settings": {
                        "fontStyle": "italic"
                    }
                },
                {
                    "scope": [
                        "comment"
                    ],
                    "settings": {
                        "fontStyle": "",
                        "foreground": "#97979790"
                    }
                },
                // {
                //     "name": "Cannot distinguish between functions and methods.",
                //     "scope": [
                //         "entity.name.function",
                //         "storage.type.function.lambda.python",
                //         "support.function.magic.python"
                //     ],
                //     "settings": {
                //         // "foreground": "#007acc",
                //         // "foreground": "#6699cc"
                //     }
                // },
                {
                    "name": "make constants red",
                    "scope": [
                        "constant.other.caps.python",
                        "constant.language",
                        "constant.numeric.dec.python",
                        "constant.numeric.float.python",
                        "support.variable.magic.python"
                    ],
                    "settings": {
                        "foreground": "#cc6566"
                    }
                }
            ]
        }
    },
}