{
    // this is configured for basedpyright semantic tokens.
    "$schema": "vscode://schemas/color-theme",
    "type": "dark",
    "name": "Tomorrow Night Eighties Deluxe",
    "colors": {
        "activityBar.background": "#282e3d",
        "activityBar.border": "#000000",
        "editor.background": "#282e3d",
        "editorGroupHeader.tabsBackground": "#222935",
        "editorUnnecessaryCode.opacity": "#97979790",
        "panel.border": "#000000",
        "panelSectionHeader.foreground": "#ffcc66",
        "panelTitle.activeBorder": "#ffcc66",
        "sideBar.background": "#222935",
        "sideBar.border": "#000000",
        "statusBar.background": "#222935",
        "statusBar.border": "#000000",
        "tab.activeBorderTop": "#ffcc66",
        "tab.border": "#000000",
        "tab.inactiveBackground": "#222935",
        "terminal.tab.activeBorder": "#ffcc66",
        "titleBar.activeBackground": "#222935",
        "titleBar.border": "#000000",
    },
    "semanticHighlighting": true,
    // these are the colors specified for LSP semantic tokens (based on tokens specified by a language server such as pylance, jedi, or basedpyright)
    "semanticTokenColors": {
        // "*.readonly": "#cc6566",
        "*.constant": "#cc6566",
        "*.builtin": {
            "bold": true,
        },
        "module": { // in pylance modules are tokens of type "module"
            "underline": true
        },
        "namespace": { // in basedpyright modules are tokens of type "namespace"
            "underline": true
        },
    },
    // these are the colors specified for Textmate scopes/tokens (essentially regex)
    "tokenColors": [
        {
            "scope": [
                "emphasis",
                "storage",
                "comment",
                "entity.other.attribute-name",
                "entity.other.attribute-name.html",
                "entity.other.attribute-name.tag.jade",
                "entity.other.attribute-name.tag.pug",
                "markup.italic",
                "keyword.control",
                "variable.language"
            ],
            "settings": {
                "fontStyle": "italic"
            }
        },
        {
            "scope": [
                "strong",
                "markup.bold",
                "markup.heading"
            ],
            "settings": {
                "fontStyle": "bold"
            }
        },
        {
            "scope": "markup.underline",
            "settings": {
                "fontStyle": "underline"
            }
        },
        {
            "scope": "comment",
            "settings": {
                "foreground": "#999999"
            }
        },
        {
            "scope": [
                "keyword.operator.class",
                "constant.other",
                "source.php.embedded.line"
            ],
            "settings": {
                "foreground": "#CCCCCC",
                "fontStyle": ""
            }
        },
        {
            "scope": [
                "variable",
                "support.other.variable",
                "string.other.link",
                "entity.name.tag",
                "entity.other.attribute-name",
                "meta.tag",
                "declaration.tag"
            ],
            "settings": {
                "foreground": "#F2777A"
            }
        },
        {
            "scope": [
                "constant.numeric",
                "constant.language",
                "support.constant",
                "constant.character",
                "variable.parameter",
                "punctuation.section.embedded",
                "keyword.other.unit"
            ],
            "settings": {
                "foreground": "#F99157",
                "fontStyle": ""
            }
        },
        {
            "scope": [
                "entity.name.class",
                "entity.name.type.class",
                "support.type",
                "support.class"
            ],
            "settings": {
                "foreground": "#FFCC66",
                "fontStyle": ""
            }
        },
        {
            "scope": [
                "string",
                "constant.other.symbol",
                "entity.other.inherited-class",
                "markup.heading"
            ],
            "settings": {
                "foreground": "#99CC99",
                "fontStyle": ""
            }
        },
        {
            "scope": [
                "keyword.operator",
                "constant.other.color"
            ],
            "settings": {
                "foreground": "#66CCCC"
            }
        },
        {
            "scope": [
                "entity.name.function",
                "meta.function-call",
                "support.function",
                "keyword.other.special-method",
                "meta.block-level"
            ],
            "settings": {
                "foreground": "#6699CC",
                "fontStyle": ""
            }
        },
        {
            "scope": [
                "keyword",
                "storage",
                "storage.type",
                "entity.name.tag.css"
            ],
            "settings": {
                "foreground": "#CC99CC",
                "fontStyle": ""
            }
        },
        {
            "scope": "invalid",
            "settings": {
                "foreground": "#CDCDCD",
                "background": "#F2777A",
                "fontStyle": ""
            }
        },
        {
            "scope": "meta.separator",
            "settings": {
                "foreground": "#CDCDCD",
                "background": "#99CCCC"
            }
        },
        {
            "scope": "invalid.deprecated",
            "settings": {
                "foreground": "#CDCDCD",
                "background": "#CC99CC",
                "fontStyle": ""
            }
        },
        {
            "name": "make vars, dots and commas white",
            "scope": [
                "variable.other.readwrite",
                "meta.function-call"
            ],
            "settings": {
                "foreground": "#C6C8C6"
            }
        },
        {
            "name": "make attributes and properties white",
            "scope": [
                "variable.other.property",
                "meta.attribute.python"
            ],
            "settings": {
                "foreground": "#C6C8C6"
            }
        },
        {
            "name": "make control flow (if, while, else, etc.) italic.",
            "scope": [
                "keyword.control"
            ],
            "settings": {
                "fontStyle": "italic"
            }
        },
        {
            "scope": [
                "comment"
            ],
            "settings": {
                "foreground": "#97979790",
                "fontStyle": ""
            }
        },
        {
            "name": "make constants red",
            "scope": [
                "constant.other.caps.python",
                "constant.language",
                "constant.numeric.dec.python",
                "constant.numeric.float.python",
                "support.variable.magic.python"
            ],
            "settings": {
                "foreground": "#CC6566"
            }
        },
        {
            "scope": "token.info-token",
            "settings": {
                "foreground": "#6796E6"
            }
        },
        {
            "scope": "token.warn-token",
            "settings": {
                "foreground": "#CD9731"
            }
        },
        {
            "scope": "token.error-token",
            "settings": {
                "foreground": "#F44747"
            }
        },
        {
            "scope": "token.debug-token",
            "settings": {
                "foreground": "#B267E6"
            }
        }
    ]
}